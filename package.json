    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-validator": "^6.14.2",
    "handlebars": "^4.7.7",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "mysql": "^2.18.1",
    "nodemailer": "^6.7.7",
    "sequelize": "^6.21.3",
    "sqlite3": "^5.0.11",
    "typeorm": "^0.3.7",
    "typeorm-naming-strategies": "^4.1.0",
